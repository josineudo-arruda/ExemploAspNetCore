@{
    ViewData["Title"] = "OperacoesMatematicas";
}

<div>
    <h1>Calculadora</h1>
    <p>Utilize o formulário para realizar uma operação matemática</p>

        <form action="CalculadoraForm" method="post"> 
            <label for="primeiroValor">Número 1</label>
            <p>
                <input type="number" style="width:200px; -moz-appearance: textfield;" name="primeiroValor" id="primeiroValor">
            </p>
            <label for="segundoValor">Número 2</label>
            <p>
                <input type="number" style="width:200px; -moz-appearance: textfield;" name="segundoValor" id="segundoValor">
            </p>
            <label for="operacao">Operação</label>
            <p>
                <select name="operacao" id="operacao" style="width:200px;">
                    <option selected value="Soma">Soma</option>
                    <option value="Subtracao">Subtração</option>
                    <option value="Multiplicacao">Multiplicação</option>
                    <option value="Divisao">Divisão</option>
                </select>
            </p>
            <p>
                <input type="submit" value="Enviar">
            </p>
            
        </form>
</div>